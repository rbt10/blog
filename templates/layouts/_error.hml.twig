{% extends 'base.html.twig' %}
{% block title %}Page non trouvée - Erreur{% endblock %}
{% block body %}
    <div class="container-fluid py-5 bg-light">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="text-center">
                    <h1 class="display-4">Page non trouvée {{ exception.statusCode}}</h1>
                    <p class="lead">{{ exception.statusText}}.</p>
                    <a class="btn btn-primary" href="{{ path("/") }}">Retour à l'accueil</a>
                </div>
            </div>
        </div>
    </div>
{{ dump(exception) }}
{% endblock %}




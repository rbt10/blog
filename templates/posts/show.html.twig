{% extends 'base.html.twig' %}

{% block title %}{{ post.title}} {% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <a class="text-sm-start" href="{{ path("app_posts") }}">Retour au blog</a>
        </div>
        <div class="row">
            <h1 class="display-6">{{ post.title|capitalize}}</h1>
            <h5>Publié le {{ post.createdAt|date('d/m/Y') }}</h5>
            {%  if post.thumbnail %}
                <img class="card-img-top rounded" src="{{ vich_uploader_asset( post.thumbnail, 'imageFile') }}" alt=" {{ post.thumbnail.imageName }}">
            {% endif %}

            <p>{{ post.content|raw }}</p>
            <p>Dernière mise à jour le :{{ post.updatedAt|date('d/m/Y') }}</p>
        </div>

    </div>

{% endblock %}